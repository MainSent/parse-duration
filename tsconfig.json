{
  "compilerOptions": {
    "target": "es2024",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": [
      "dom",
      "ESNext"
    ],
    "sourceMap": true,
    "declaration": false,
    "composite": false,
    "removeComments": true,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "./build"
  },
  "exclude": [
    "node_modules",
    "eslint.config.ts"
  ],
  "include": [
    "**/*.ts"
  ]
}
